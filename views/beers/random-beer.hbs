<h1>Random Beer</h1>
<section>
    {{#each beers}}
        <div>
            {{#if this.image_url}}
                <img src="{{ this.image_url }} alt="{{ this.tagline }}"
            {{/if}}
            <div>
                <h3>
                    <a href="/beers/"></a>
                    {{this.name}}
                </h3>
            </div>
        </div>
    
    {{/each}}


    <div>
        <a>Check a random beer</a>
    </div>
</section>